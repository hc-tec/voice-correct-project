
text {
	color: var(--primary-color);
}
.evaluate-wrapper {
	width: 60%;
	margin: 0 auto;
	padding: 10% 0;
}
.evaluate-wrapper > view {
	width: 100%;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	        flex-direction: column;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
}
.evaluate-input-content {
	margin-bottom: 10%;
}
.evaluate-input {
	width: 60px;
	padding: 10px;
	font-size: 20px;
	-webkit-border-radius: 5px;
	        border-radius: 5px;
	text-align: center;
	-webkit-transition: all .1s;
	transition: all .1s;
}
.evaluate-results,
.evaluate-words {
	width: 100%;
}
.evaluate-results text {
	color: #000;
	margin-bottom: 10px;
}
.evaluate-words {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-flex-wrap: wrap;
	        flex-wrap: wrap;
}
.evaluate-clear {
	margin-top: 20px;
	color: var(--danger-color);
	font-size: 14px;
}

